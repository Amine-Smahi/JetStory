<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jetlightstudio.jetstory">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".ToolBox.App"
        android:allowBackup="true"
        android:icon="@drawable/book_red"
        android:label="@string/app_name"
        android:roundIcon="@drawable/book_red"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Controllers.ReadingActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Controllers.ChoosingActivity"/>

        <activity
            android:name=".Controllers.StoryListActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Controllers.SplashScreen"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>